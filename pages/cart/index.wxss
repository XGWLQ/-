page {
  margin-bottom: 90rpx;
}
.revice_address .address_btn {
  width: 100%;
  padding: 20rpx 0;
}
.revice_address .address_btn button {
  width: 70%;
}
.revice_address .address_info {
  width: 100%;
  padding: 0 20rpx;
  font-size: 30rpx;
  line-height: 55rpx;
  background-color: #fcfffc;
}
.revice_address .address_info .info_top {
  display: flex;
  justify-content: space-between;
}
.cart_content {
  overflow: hidden;
  background-color: #f1f1f1;
}
.cart_content .cart_title {
  font-size: 35rpx;
  font-weight: 500px;
  background-color: #ffffff;
  margin: 10rpx 0;
  padding: 12rpx;
  padding-right: 0;
}
.cart_content .cart_main .cart_item {
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #ffffff;
  border-radius: 15px;
  padding: 0 20rpx;
  margin: 10rpx 0;
}
.cart_content .cart_main .cart_item .item_checkbox {
  flex: 0.5;
  font-size: 30rpx;
}
.cart_content .cart_main .cart_item .item_img {
  flex: 2;
  padding: 10rpx;
}
.cart_content .cart_main .cart_item .item_img image {
  width: 90%;
}
.cart_content .cart_main .cart_item .item_info {
  flex: 4;
}
.cart_content .cart_main .cart_item .item_info .good_name {
  font-size: 30rpx;
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  color: #666;
  margin-bottom: 40rpx;
}
.cart_content .cart_main .cart_item .item_info .good_price_wrap {
  display: flex;
  justify-content: space-between;
}
.cart_content .cart_main .cart_item .item_info .good_price_wrap .price {
  color: var(--themeColor);
  font-size: 36rpx;
  font-weight: 600px;
}
.cart_content .cart_main .cart_item .item_info .good_price_wrap .good_num_tool {
  display: flex;
}
.cart_content .cart_main .cart_item .item_info .good_price_wrap .good_num_tool .num_edit {
  width: 55rpx;
  height: 55rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border: 1px solid #ccc;
  border-radius: 50%;
}
.cart_content .cart_main .cart_item .item_info .good_price_wrap .good_num_tool .good_num {
  width: 55rpx;
  height: 55rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.cart_content .cart_main .addGoodsBox {
  background-color: #fff;
}
.cart_content .cart_main .addGoodsBox .addGoods {
  width: 50%;
  margin: 0 auto;
  border-radius: 25px;
  height: 90rpx;
  background-color: #11b0f2;
  text-align: center;
  line-height: 90rpx;
  font-size: 36rpx;
  color: #fff;
  font-weight: bold;
}
.footer_uilt {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 90rpx;
  display: flex;
  border: 1rpx solid #ccc;
  background-color: #fff;
}
.footer_uilt .item_checkbox {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}
.footer_uilt .total_price_warp {
  flex: 3;
  text-align: right;
  padding-right: 10rpx;
  font-size: 25rpx;
}
.footer_uilt .total_price_warp .total_price .price {
  font-size: 32rpx;
  font-weight: bold;
  color: var(--themeColor);
}
.footer_uilt .order_pay_warp {
  flex: 1.5;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: var(--themeColor);
  color: #fff;
  font-size: 32rpx;
  font-weight: bold;
}
