<view class="good_detail">
	<!-- 上面轮播图 -->
	<view class="detail_img">
		<swiper indicator-dots autoplay circular>
			<swiper-item wx:for="{{goodDetail.pics}}" wx:key="pics_id"
			bind:tap="handlePrevewImage"
			data-url="{{item.pics_mid}}">
				<image src="{{item.pics_mid}}"
				 mode="widthFix"
				  /> 
			</swiper-item>
		</swiper>
	</view>
	<!-- 价格 -->
	<view class="good_price">￥{{goodDetail.goods_price}}</view>
	<!-- 商品介绍 收藏-->
	<view class="good_info">
		<!-- 介绍 -->
		<view class="info">{{goodDetail.goods_name}}</view>
		<!-- 收藏 -->
		<view class="collect" bind:tap="handleCollectShow">
			<view class="iconfont {{isCollect?'icon-shoucang1':'icon-shoucang'}}"></view>
			<view>收藏</view>
		</view>
	</view>
	<!-- 图文详情 -->
	<view class="good_img_detail">
		<view class="info_title">图文详情</view>
		<view class="info_content">
			<rich-text nodes="{{goodDetail.goods_introduce}}"></rich-text>
		</view>
	</view>

	<!-- 底部加入购物车 -->
	<view class="btn_tool">
		<!--联系客服 -->
		<view class="tool_item">
			<view class="iconfont icon-kefu"></view>
			<view >联系客服</view>
			<button open-type="contact"></button>
		</view>
		<view class="tool_item">
			<view class="iconfont icon-yixianshi-"></view>
			<view >分享</view>
			<button open-type="share"></button>
		</view>
		<navigator url="/pages/cart/index" open-type='switchTab' class="tool_item">
			<view class="iconfont icon-gouwuche"></view>
			<view >购物车</view>
		</navigator>
		<view class="tool_item btn_cart" bind:tap="hanbleCartAdd">
			加入购物车
		</view>
		<view class="tool_item btn_buy">
			立即购买
		</view>
	</view>
</view>
