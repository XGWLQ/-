<view class="goods_list">
	<!-- 商品列表搜索框 -->
	<searchInput></searchInput>
	<!-- tabs框 -->
	<tabs tabs="{{tabs}}" bind:itemChange="handleTabChenge">
		<block wx:if="{{tabs[0].isClick}}">
			<view class="good_list_tab">
				<navigator class="good_item"
				wx:for="{{goodList}}"
				wx:key="*this"
				url="/pages/goods_detail/index?goods_id={{item.goods_id}}"
				>
					<!-- 左侧图片容器 -->
					<view class="good_left_img">
						<image mode="widthFix" src="{{item.goods_small_logo?item.goods_small_logo:'http://image4.suning.cn/uimg/b2c/newcatentries/0070078057-000000000154099975_1_400x400.jpg'}}" />
					</view>
					<!-- 右侧商品信息容器 -->
					<view class="good_right_info">
						<view class="info_text">{{item.goods_name}}</view>
						<view class="info_price">￥{{item.goods_price}}</view>
					</view>
				</navigator>
			</view>
		</block>
		<block wx:elif="{{tabs[1].isClick}}">开发中</block>
		<block wx:else>开发中</block>
	</tabs>
</view>
